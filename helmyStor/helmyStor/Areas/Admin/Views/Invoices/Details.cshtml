@model InvoiceViewModel
@{
    ViewData["Title"] = "Details";
}
@section Styles{
<link rel="stylesheet" type="text/css" href="~/Admin/app-assets/css-rtl/pages/invoice.css">
}
<!-- BEGIN: Content-->

<div class="content-body">
    <div class="card-header">
        <!-- invoice functionality start -->
        <section class="invoice-print mb-1">
            <div class="row">
                <div class="col-12 d-flex flex-column flex-md-row justify-content-end">
                    <button class="btn btn-primary btn-print mb-1 mb-md-0"> <i class="feather icon-file-text"></i> Print</button>
                </div>
            </div>
        </section>
    </div>
    <!-- invoice functionality end -->
    <!-- invoice page -->
    <section class="card invoice-page">
        <div id="invoice-template" class="card-body">
            <!-- Invoice Company Details -->
            <div id="invoice-company-details" class="row">
                <div class="col-12 text-right">
                    <h1>Invoice</h1>
                    <div class="invoice-details mt-2">
                        <h6>Order Id</h6>
                        <p>@Model.InvoiceOrder.Order.OrderNumber</p>
                        <h6 class="mt-2">INVOICE DATE</h6>
                        <p>@Model.InvoiceOrder.Order.DateTime</p>
                    </div>
                </div>
            </div>
            <!--/ Invoice Company Details -->
            <!-- Invoice Recipient Details -->
            <div id="invoice-customer-details" class="row pt-2">
                <div class="col-12 text-right">
                    <h5><span>Customer Id : </span>@Model.Customer.CustomerId</h5>
                    <div class="company-info my-2">
                        <p><span>Customer Name : </span>@Model.Customer.CustomerName</p>
                        <p><span>Address : </span>@Model.Customer.Address</p>
                    </div>
                    <div class="company-contact">
                        <p>
                            <i class="feather icon-mail"></i>
                            @Model.Customer.Email
                        </p>
                        <p>
                            <i class="feather icon-phone"></i>
                            @Model.Customer.PhoneNumber
                        </p>
                    </div>
                </div>
            </div>
            <!--/ Invoice Recipient Details -->
            <!-- Invoice Items Details -->
            <div id="invoice-items-details" class="pt-1 invoice-items-table">
                <div class="row">
                    <div class="table-responsive col-12">
                        <table class="table table-borderless">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Quantity</th>
                                    <th>Image</th>
                                    <th>SubTotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.Invoices)
                                {
                                    <tr>
                                        <td>@product.Product.ProductName</td>
                                        <td>@product.Qty</td>
                                        <td><img src="@string.Format("/Uploads/{0}",product.Product.ImageName)" height="50" width="50" alt=""></td>
                                        <td>@product.TotalPrice</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div id="invoice-total-details" class="invoice-total-table">
                <div class="row">
                    <div class="col-7 offset-5">
                        <div class="table-responsive">
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <th>TOTAL</th>
                                        <td>@Model.TotalPriceInvoce</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- invoice page end -->

</div>
<!-- END: Content-->
@section Scripts{
<!-- BEGIN: Page JS-->
<script src="~/Admin/app-assets/js/scripts/pages/invoice.js"></script>
<!-- END: Page JS-->
}















